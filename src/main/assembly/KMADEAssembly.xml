<assembly>
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
	      <directory>src/main/java</directory>
	      <outputDirectory>src</outputDirectory>
    	</fileSet>
    	<fileSet>
	      <directory>src/main/resources</directory>
	      <outputDirectory>src/kmade/resources</outputDirectory>
    	</fileSet>			
	</fileSets>
	<files>
		<file>
			<source>${project.build.directory}/${project.artifactId}-${project.version}.jar</source>
			<destName>kmade.jar</destName>
		</file>
		<file>
			<source>${project.basedir}/LICENCE-2.0.txt</source>
		</file>	
		<file>
			<source>src/main/bin/go.bat</source>
		</file>		
	</files>
	<dependencySets>
		<dependencySet>
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<excludes>
				<exclude>
					KMADe_ExtUI:KMADe_ExtUI
				</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>
